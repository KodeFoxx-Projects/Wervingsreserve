@using Wervingsreserve.Website.Features.Shared.Components.KandidaatKaart
@model KandidaatKaart

<div class="jumbotron jumbotron-person-details">
    <div id="person-details" class="fluid-container d-flex justify-content-start">
        <img id="person-face" src="@Model.Kandidaat.AfbeeldingsBron" />
        <div>
            <h1 id="person-name">@Model.Kandidaat.VolledigeNaam</h1>
            <h2 id="person-degree">@Model.Kandidaat.Diplomas.FirstOrDefault()</h2>
            <h3 id="person-personalia">@Model.Kandidaat.Leeftijd, @Model.Kandidaat.Geslacht</h3>
        </div>
    </div>
</div>